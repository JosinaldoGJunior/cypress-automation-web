{
    "name": "cypress-automation-interface",
    "version": "1.0.0",
    "description": "Automated interface tests with Cypress and Allure for reports.",
    "scripts": {
        "test": "cypress run",
        "test:ci": "cypress run --env allure=true",
        "allure:generate": "allure generate allure-results --clean -o allure-report",
        "allure:open": "allure open allure-report"
    },
    "dependencies": {
        "cypress": "^14.3.0",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@shelex/cypress-allure-plugin": "^2.41.0",
        "allure-commandline": "^2.33.0",
        "dotenv": "^16.4.7"
    }
}
